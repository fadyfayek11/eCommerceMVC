@using eCommerce.Entities
@using eCommerce.Shared
@model eCommerce.Web.ViewModels.ProductsViewModel

@{
    Html.RenderPartial("SearchFilters/_ListingFilters", Model);
}
@if (Model.Products != null && Model.Products.Count > 0)
{
    <div class="product-list">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                var currentLanguageProductRecord = product.ProductRecords.FirstOrDefault(x => x.LanguageID == AppDataHelper.CurrentLanguage.ID);

                var currentLanguageProductCategoryRecord = product.Category.CategoryRecords.FirstOrDefault(x => x.LanguageID == AppDataHelper.CurrentLanguage.ID);

                var sanitizedSEOTitle = AppDataHelper.CurrentLanguage.ShortCode == LanguagesHelper.EnglishLanguageShortCode && currentLanguageProductRecord != null ? currentLanguageProductRecord.Name.SanitizeLowerString() : string.Empty;

                var detailsLink = Url.ProductDetails(category: product.Category.SanitizedName, ID: product.ID, sanitizedtitle: sanitizedSEOTitle,productTypeID: product.ProductTypes.FirstOrDefault(_ => !_.IsDeleted).ID);

                var productPrice = product.ProductTypes.FirstOrDefault().Discount.HasValue && product.ProductTypes.FirstOrDefault().Discount.Value > 0 ? product.ProductTypes.FirstOrDefault().Discount.Value : product.ProductTypes.FirstOrDefault().Price;

                var thumbnail = PictureHelper.GetProductThumbnail(product.ProductPictures, product.ThumbnailPictureID);

                <div class="col-lg-3 col-sm-6">
                    <div class="product-item">
                        <div class="pi-pic" data-href="@detailsLink">
                            @if (product.ProductTypes.FirstOrDefault().StockQuantity == 0)
                            {
                                <div class="outofstock"></div>
                            }

                            @Html.Thumbnail(picture: thumbnail, targetSize: 160, seoTitle: sanitizedSEOTitle, classes: "m-auto", alt: currentLanguageProductRecord != null ? currentLanguageProductRecord.Name : string.Empty)
                            @if (product.isFeatured)
                            {
                                <div class="featured">
                                    @("PP.Search.Products.Featured".Localized())
                                </div>
                            }
                        <ul class="itemCartHolder">
                            <li class="w-icon active"><a href="@detailsLink" title="@("PP.Shopping.ViewProduct".Localized())"><i class="fas fa-eye"></i></a></li>
                            @if (product.ProductTypes.FirstOrDefault().StockQuantity > 0 && !User.IsInRole("Guest"))
                            {
                                <li class="w-icon active"><a title="@("PP.Shopping.AddToCart".Localized())" data-id="@product.ID" data-price="@product.ProductTypes.FirstOrDefault().Price" class="pointerCursor btnAddToCart"><i class="fas fa-cart-plus"></i></a></li>
                            }
                            </ul>
                        </div>
                        <div class="pi-text">
                            <a class="catagory-name" href="@Url.DiscountProducts(category: product.Category.SanitizedName)">@(currentLanguageProductCategoryRecord != null ? currentLanguageProductCategoryRecord.Name : string.Empty)</a>
                            @if (!User.IsInRole("Guest"))
                            {
                                <div class="product-price ltr-dir">
                                    @if (product.ProductTypes.FirstOrDefault().Discount.HasValue && product.ProductTypes.FirstOrDefault().Discount.Value > 0)
                                    {
                                        <span>
                                            @product.ProductTypes.FirstOrDefault().Price.WithCurrency()
                                        </span>
                                    }
                                    @productPrice.WithCurrency()
                                </div>
                            }
                            <a href="@detailsLink">
                                <h5>
                                    @(currentLanguageProductRecord != null ? currentLanguageProductRecord.Name : string.Empty)
                                </h5>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    if (Model.Pager != null && Model.Pager.TotalPages > 1)
    {
        <div class="product-list-pagination">
            <div class="row">
                <div class="col-lg-12">
                    <div class="pageination">
                        <nav>
                            <ul class="pagination justify-content-center">
                                @if (Model.Pager.CurrentPage == 1)
                                {
                                    <li class="page-item disabled">
                                        <a class="page-link disabled" href="#">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.DiscountProducts(category: Model.CategoryName, q: Model.SearchTerm, pageNo: Model.Pager.CurrentPage - 1, from: Model.PriceFrom, to: Model.PriceTo, recordSize: Model.PageSize, sortby: Model.SortBy)">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
                                {
                                    var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;

                                    <li class="page-item @active">
                                        <a class="page-link" href="@Url.DiscountProducts(category: Model.CategoryName, q: Model.SearchTerm, pageNo: page, from: Model.PriceFrom, to: Model.PriceTo, recordSize: Model.PageSize, sortby: Model.SortBy)">
                                            @page
                                        </a>
                                    </li>
                                }

                                @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
                                {
                                    <li class="page-item disabled">
                                        <a class="page-link disabled">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.DiscountProducts(category: Model.CategoryName, q: Model.SearchTerm, pageNo: Model.Pager.CurrentPage + 1, from: Model.PriceFrom, to: Model.PriceTo, recordSize: Model.PageSize, sortby: Model.SortBy)">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning m-0" role="alert">
        @("PP.Search.ProductsNotFound".Localized())
    </div>
}