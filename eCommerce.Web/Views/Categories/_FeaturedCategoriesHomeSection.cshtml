@model List<eCommerce.Entities.Category>
<style>
    style {
        width: 100% !important;
        height: 100% !important;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div class="banner-section spad">
        <div class="container-fluid">
            <div class="row">
                @foreach (var category in Model)
                {
                    var currentLanguageCategoryRecord = category.CategoryRecords.FirstOrDefault(x => x.LanguageID == AppDataHelper.CurrentLanguage.ID);

                    <div class="col-lg-4" style="margin-bottom:10px">
                        <a class="inner-text" style="align-items: center;" href="@Url.SearchProducts(category: category.SanitizedName)">
                        <div class="single-banner d-flex align-items-center imgsb" title="@("PP.Home.FeaturedCategories.BrowseCategoryProducts".LocalizedString().Replace("{category}",currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : string.Empty))">
                            @Html.Picture(
                           picture:category.Picture,defaultPic: "site/default-bg.jpg", width:"100%",
                           alt: currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : string.Empty,
                           style:"width:100%;height:100%"
                           )
                        </div>
                            <h4>
                                @(currentLanguageCategoryRecord != null ? currentLanguageCategoryRecord.Name : string.Empty)
                            </h4>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}<!--End-->