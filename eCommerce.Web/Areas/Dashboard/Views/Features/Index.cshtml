@model eCommerce.Web.Areas.Dashboard.ViewModels.FeaturesListingViewModel

@{
    if (Model != null)
    {
        Model.PageTitle = "Dashboard.Features.Title".LocalizedString();
        Model.PageDescription = "Dashboard.Features.Description".LocalizedString();
        Model.PageURL = Url.ListAction("Features");
        Model.PageImageURL = PictureHelper.PageImageURL("features.jpg");
    }
}

<div class="page-info-container">
    <h3 class="h3 mb-2 text-gray-800">
        @Model.PageTitle
    </h3>
    <p>
        @Model.PageDescription
    </p>
    <hr />
</div>

<div class="page-data-holder card shadow mb-4">
    <div class="card-header">
        <form action="@Url.ListAction("Features")">
            <div class="input-group">
                <input name="searchterm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="@("Dashboard.Features.SearchPlaceholder".Localized())">
                <button type="submit" class="form-control btn btn-primary"><i class="fas fa-search"></i> @("Dashboard.Features.Search".Localized())</button>
                <a href="@Url.ListAction("Features")" role="button" class="form-control btn btn-primary"><i class="fas fa-redo-alt"></i> @("Dashboard.Features.Reset".Localized())</a>
                <a href="@Url.CreateAction("Features")" role="button" class="form-control btn btn-success"><i class="fas fa-plus"></i> @("Dashboard.Features.CreateFeature".Localized())</a>
            </div>
        </form>
    </div>
    <div class="card-body p-0" id="list-holder">
        @{Html.RenderPartial("_Listing", Model);}
    </div>
</div>